.container {
    overflow: hidden;
    background-color: #f8f8f8;
}

.header-container {
    background-color: #f8f8f8;
    width: 100%;
    height: 170px;
    margin-top: 10px;
}

.van-search {
    border-radius: 45px !important;
    margin-left: 5%;
    width: 90%;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2) !important;
    height: 30px !important;
}

.van-search__content {
    background-color: #fff !important;
    border-radius: 45px !important;
    height: 28px !important;
    margin-top: -3px;
}

.header {
    position: absolute;
    align-items: center;
    margin-top: 10px;
    width: 100%;
    height: 120px;
    background-color: #fefefe;
    padding-left: 15px;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2) !important;
}

.hospitalImage {
    position: absolute;
    left: 15px;
    top: 25px;
}

.header-top {
    position: absolute;
    left: 100px;
}

.hospitalName {
    font-size: 20px;
    font-weight: bolder;
    margin-top: 15px;
}

.collect-icon {
    position: absolute;
    top: 42px;
    right: 12%;
}

.van-image--round {
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2) !important;
}

.space {
    margin-top: 15px;
    color: #999;
    font-size: 12px;
}

.address {
    margin-top: 15px;
    color: #9d9d9d;
    font-size: 12px;
    margin-bottom: 15px;
}

.space-icon {
    margin-right: 10px;
}

.tree-container {
    background-color: #fefefe !important;
    overflow: hidden;
}

.van-sidebar-item {
    background-color: #f6f6f6 !important;
}

.van-sidebar-item--selected {
    color: #d3aa79 !important;
    border-color: #d3aa79 !important;
    background-color: #fdfdfd !important;
}

