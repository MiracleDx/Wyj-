<import src="../../components/space/space.wxml"></import>

<view style="background-color: #fff; height: 100%">
  <!--搜索框-->
  <van-search
    value="{{ value }}"
    input-align="center"
    placeholder="请输入搜索关键词"
    bind:change="onChange"
  />
  
  <!--选项卡-->
  <van-dropdown-menu>
    <van-dropdown-item value="{{ areaValue }}" options="{{ area }}" />
    <van-dropdown-item value="{{ levelValue }}" options="{{ level }}" />
    <van-dropdown-item value="{{ spaceValue }}" options="{{ space }}" />
  </van-dropdown-menu>
  
  <template is="space" data="{{size: 10}}"/>
  <!--医院列表-->
  <view wx:for="{{10}}">
    <view class="hospitalContainer" bindtap="selectDetail">
      <!--医院图片-->
      <van-image 
              width="70" 
              height="70"
              radius="5%"
              src="https://img.yzcdn.cn/vant/cat.jpeg"
              use-loading-slot
              lazy-load
              class="hospitalImage">
        <van-loading slot="loading" type="spinner" size="20" vertical />
      </van-image>
      
      <!--医院名称-->
      <view class="hospitalDesc">
        <template is="space" data="{{size: 10}}"/>
        
        <text class="hospitalName">北京协和医院</text>
  
        <template is="space" data="{{size: 10}}"/>
        
        <view class="hospitalInfo" style="width: {{HospitalInfoWidth}}px">
          <!--医院等级-->
          <view>三级甲等</view>
          <view class="hospitalDistance">
            <van-icon size="10" name="location"/>13.6km
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
