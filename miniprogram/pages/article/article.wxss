page {
    background-color: #eee;
}

.container {
    width: 100%;
    height: 100%;
}

.container swiper {
    width: 100%; 
    height: 250px
}

.body {
    width: 100%;
    height: 100%;
}

.culture {
    position: absolute;
    width: 90%;
    top: 235px;
    left: 5%;
    height: 200px;
    box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2) !important;
    background-color: #fefefe;
    border-radius: 10px;
}

.left {
    width: 50%;
    height: 100%;
    position: absolute;
    left: 0;
}

.left view {
    position: absolute;
    width: 100%;
    left: 35%;
    top: 40%;
}

.right {
    width: 50%;
    height: 100%;
    position: absolute;
    right: 0;
}

.right view {
    position: absolute;
    width: 100%;
    left: 35%;
    top: 40%;
}

.line {
    position: absolute;
    width: 1px;
    height: 70%;
    background-color: #eee;
    top: 15%;
    left: 50%;
    z-index: 999;
}

.foot {
    margin-top: 190px;
    width: 100%;
    height: 1000px;
}

.articles {
    width: 90%;
    height: 100%;
    margin-left: 5%;
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2) !important;
    background-color: #fefefe;
    border-radius: 2px;
    flex-direction: row;
}

.article-time {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    margin-top: 10px;
    margin-bottom: 10px;
}

.article-item {
    width: 100%;
    height: 60px;
}

.article-item-title {
    display: flex;
    align-items: center;
    font-size: 12px;
    font-weight: 570;
    margin-left: 70px;
    height: 60px
}

.article-item-image {
    float: left;
    margin-left: 10px;
    margin-top: 5px;
}

.split {
    width: 100%;
    height: 1px;
    color: #eee;
    z-index: 999;
}